<script>
  const plans: Record<string, {name: string; cancer: number; blood: number; aiPredict: number; aiPrevent: number; priceFirst: string; priceRenewal: string; link: string}> = {
    'executive_50over': {
      name: '経営幹部プラン（50代以上）',
      cancer: 3, blood: 3, aiPredict: 1, aiPrevent: 4,
      priceFirst: '¥198,000', priceRenewal: '¥148,000',
      link: '/products/12f01544-0eee-43fc-a62b-9c9783c131ef'
    },
    'executive_50under': {
      name: '経営幹部プラン（50代未満）',
      cancer: 3, blood: 3, aiPredict: 1, aiPrevent: 4,
      priceFirst: '¥198,000', priceRenewal: '¥148,000',
      link: '/products/12f01544-0eee-43fc-a62b-9c9783c131ef'
    },
    'middle_50over': {
      name: '中堅社員プラン（50代以上）',
      cancer: 3, blood: 1, aiPredict: 1, aiPrevent: 2,
      priceFirst: '¥148,000', priceRenewal: '¥98,000',
      link: '/products/14c1d6af-cb60-4896-9392-383836e7bd25'
    },
    'middle_50under': {
      name: '中堅社員プラン（50代未満）',
      cancer: 2, blood: 1, aiPredict: 1, aiPrevent: 2,
      priceFirst: '¥148,000', priceRenewal: '¥98,000',
      link: '/products/14c1d6af-cb60-4896-9392-383836e7bd25'
    },
    'general_50over': {
      name: '一般社員プラン（50代以上）',
      cancer: 3, blood: 0, aiPredict: 0, aiPrevent: 1,
      priceFirst: '¥128,000', priceRenewal: '¥78,000',
      link: '/products/3a0aad30-6fbc-4527-8999-a885e0f17949'
    },
    'general_50under': {
      name: '一般社員プラン（50代未満）',
      cancer: 2, blood: 0, aiPredict: 0, aiPrevent: 1,
      priceFirst: '¥98,000', priceRenewal: '¥58,000',
      link: '/products/3c5d7de5-fdcb-45e3-8b17-13c9540269ea'
    }
  };

  let selectedRole = '';
  let selectedAge = '';

  function updateSelection() {
    document.querySelectorAll('.role-card').forEach(card => {
      const role = card.getAttribute('data-role');
      if (role === selectedRole) {
        card.classList.add('border-tiffany-500', 'bg-tiffany-50', 'shadow-md');
        card.classList.remove('border-gray-200', 'bg-white');
      } else {
        card.classList.remove('border-tiffany-500', 'bg-tiffany-50', 'shadow-md');
        card.classList.add('border-gray-200', 'bg-white');
      }
    });

    const ageStep = document.getElementById('age-step');
    if (selectedRole) {
      ageStep?.classList.remove('opacity-40', 'pointer-events-none');
    }

    document.querySelectorAll('.age-card').forEach(card => {
      const age = card.getAttribute('data-age');
      if (age === selectedAge) {
        card.classList.add('border-tiffany-500', 'bg-tiffany-50', 'shadow-md');
        card.classList.remove('border-gray-200', 'bg-white');
      } else {
        card.classList.remove('border-tiffany-500', 'bg-tiffany-50', 'shadow-md');
        card.classList.add('border-gray-200', 'bg-white');
      }
    });

    const result = document.getElementById('plan-result');
    if (selectedRole && selectedAge) {
      const key = selectedRole + '_' + selectedAge;
      const plan = plans[key];
      if (plan && result) {
        (document.getElementById('plan-name') as HTMLElement).textContent = plan.name;

        // がんリスク検査（常に表示）
        (document.getElementById('count-cancer') as HTMLElement).textContent = String(plan.cancer);

        // 血液検査（0の場合は非表示）
        const rowBlood = document.getElementById('row-blood') as HTMLElement;
        if (plan.blood > 0) {
          rowBlood.classList.remove('hidden');
          (document.getElementById('count-blood') as HTMLElement).textContent = String(plan.blood);
        } else {
          rowBlood.classList.add('hidden');
        }

        // AI疾病予測報告書（0の場合は非表示）
        const rowAiPredict = document.getElementById('row-ai-predict') as HTMLElement;
        if (plan.aiPredict > 0) {
          rowAiPredict.classList.remove('hidden');
          (document.getElementById('count-ai-predict') as HTMLElement).textContent = String(plan.aiPredict);
        } else {
          rowAiPredict.classList.add('hidden');
        }

        // AI疾病予防報告書（常に表示）
        (document.getElementById('count-ai-prevent') as HTMLElement).textContent = String(plan.aiPrevent);

        (document.getElementById('plan-price-first') as HTMLElement).textContent = plan.priceFirst;
        (document.getElementById('plan-price-renewal') as HTMLElement).textContent = plan.priceRenewal;
        document.getElementById('plan-link')?.setAttribute('href', plan.link);

        result.classList.remove('hidden');
        result.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    } else {
      result?.classList.add('hidden');
    }
  }

  document.querySelectorAll('.role-card').forEach(card => {
    card.addEventListener('click', () => {
      selectedRole = card.getAttribute('data-role') || '';
      selectedAge = '';
      updateSelection();
    });
  });

  document.querySelectorAll('.age-card').forEach(card => {
    card.addEventListener('click', () => {
      selectedAge = card.getAttribute('data-age') || '';
      updateSelection();
    });
  });

  // 診断モーダル
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('shindanModal');
    const openBtn = document.getElementById('openShindanBtn');
    const closeBtn = document.querySelector('.shindan-close-modal');
    const iframe = document.getElementById('shindanIframe') as HTMLIFrameElement;

    if (openBtn && modal && iframe) {
      openBtn.addEventListener('click', () => {
        iframe.src = '/shindan.html';
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';
      });
    }

    if (closeBtn && modal && iframe) {
      closeBtn.addEventListener('click', () => {
        modal.style.display = 'none';
        iframe.src = '';
        document.body.style.overflow = 'auto';
      });
    }

    window.addEventListener('click', (e) => {
      if (e.target === modal && iframe) {
        modal.style.display = 'none';
        iframe.src = '';
        document.body.style.overflow = 'auto';
      }
    });
  });
</script>
