---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="お問い合わせ">
  <Header />

  <!-- ヒーローセクション -->
  <section class="contact-hero">
    <div class="container">
      <div class="hero-content fade-in">
        <h1 class="hero-title">お問い合わせ</h1>
        <p class="hero-subtitle">
          サービスに関するご質問やご相談など、<br>
          お気軽にお問い合わせください
        </p>
      </div>
    </div>
  </section>

  <!-- お問い合わせフォームセクション -->
  <section class="contact-form-section">
    <div class="container">
      <div class="form-wrapper fade-in">
        <form id="contact-form" class="contact-form">
          <!-- お問い合わせ区分（ラジオボタン） -->
          <div class="form-group inquiry-type-group">
            <label class="form-label">
              お問い合わせ区分 <span class="required">必須</span>
            </label>
            <div class="radio-cards">
              <label class="radio-card" data-type="corporate">
                <input type="radio" name="inquiry_type" value="corporate" required />
                <div class="radio-card-content">
                  <span class="radio-card-title">ウエルフォートについてご検討・ご質問のある法人のお客様</span>
                </div>
                <button type="button" class="btn-online-meeting" style="display:none;">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  無料オンライン面談
                </button>
              </label>
              <label class="radio-card" data-type="individual">
                <input type="radio" name="inquiry_type" value="individual" />
                <div class="radio-card-content">
                  <span class="radio-card-title">ウエルフォートについてご検討・ご質問のある個人のお客様</span>
                </div>
                <button type="button" class="btn-online-meeting" style="display:none;">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  無料オンライン面談
                </button>
              </label>
              <label class="radio-card" data-type="other">
                <input type="radio" name="inquiry_type" value="other" />
                <div class="radio-card-content">
                  <span class="radio-card-title">当社への営業、提案、提携を打診したい方、及びその他の方</span>
                </div>
              </label>
            </div>
          </div>

          <!-- 動的フォームフィールド -->
          <div id="dynamic-fields" style="display:none;">

            <!-- 法人・その他向けフィールド -->
            <div id="fields-corporate" class="conditional-fields" style="display:none;">
              <div class="form-group">
                <label for="company" class="form-label">
                  法人名 <span class="required">必須</span>
                </label>
                <input type="text" id="company" name="company" class="form-input" placeholder="株式会社〇〇" />
              </div>
              <div class="form-group">
                <label for="department" class="form-label">
                  部署名 <span class="optional">任意</span>
                </label>
                <input type="text" id="department" name="department" class="form-input" placeholder="人事部" />
              </div>
              <div class="form-group">
                <label for="name" class="form-label">
                  ご担当者名 <span class="required">必須</span>
                </label>
                <input type="text" id="name" name="name" class="form-input" placeholder="山田 太郎" />
              </div>
            </div>

            <!-- 個人向けフィールド -->
            <div id="fields-individual" class="conditional-fields" style="display:none;">
              <div class="form-group">
                <label for="gender" class="form-label">
                  性別 <span class="optional">任意</span>
                </label>
                <select id="gender" name="gender" class="form-select">
                  <option value="">選択してください</option>
                  <option value="male">男性</option>
                  <option value="female">女性</option>
                  <option value="other">その他</option>
                  <option value="no_answer">回答しない</option>
                </select>
              </div>
              <div class="form-group">
                <label for="age" class="form-label">
                  年齢 <span class="optional">任意</span>
                </label>
                <select id="age" name="age" class="form-select">
                  <option value="">選択してください</option>
                  <option value="~19">19歳以下</option>
                  <option value="20-29">20代</option>
                  <option value="30-39">30代</option>
                  <option value="40-49">40代</option>
                  <option value="50-59">50代</option>
                  <option value="60-69">60代</option>
                  <option value="70~">70歳以上</option>
                </select>
              </div>
            </div>

            <!-- メールアドレス（共通） -->
            <div class="form-group">
              <label for="email" class="form-label">
                メールアドレス <span class="required">必須</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-input"
                placeholder="example@email.com"
                required
              />
            </div>

            <!-- 電話番号（法人・その他のみ） -->
            <div id="field-phone" class="form-group" style="display:none;">
              <label for="phone" class="form-label">
                電話番号 <span class="optional">任意</span>
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-input"
                placeholder="03-1234-5678"
              />
            </div>

            <!-- オンライン面談希望（法人・個人のみ） -->
            <div id="field-online-meeting" class="form-group" style="display:none;">
              <label class="checkbox-label meeting-checkbox">
                <input
                  type="checkbox"
                  id="online-meeting"
                  name="online_meeting"
                  class="form-checkbox"
                />
                <span class="meeting-label-text">オンライン面談を希望する</span>
              </label>

              <!-- 希望日時選択（チェック時のみ表示） -->
              <div id="meeting-datetime" class="meeting-datetime" style="display:none;">
                <p class="meeting-note">ご希望の日時を最大3つまでお選びください（平日 10:00〜19:00）</p>

                <div class="datetime-slot">
                  <span class="slot-label">第1希望</span>
                  <div class="slot-inputs">
                    <input type="date" id="meeting-date-1" name="meeting_date_1" class="form-input date-input" />
                    <select id="meeting-time-1" name="meeting_time_1" class="form-select time-select">
                      <option value="">時間を選択</option>
                      <option value="10:00">10:00</option>
                      <option value="11:00">11:00</option>
                      <option value="12:00">12:00</option>
                      <option value="13:00">13:00</option>
                      <option value="14:00">14:00</option>
                      <option value="15:00">15:00</option>
                      <option value="16:00">16:00</option>
                      <option value="17:00">17:00</option>
                      <option value="18:00">18:00</option>
                      <option value="19:00">19:00</option>
                    </select>
                  </div>
                </div>

                <div class="datetime-slot">
                  <span class="slot-label">第2希望</span>
                  <div class="slot-inputs">
                    <input type="date" id="meeting-date-2" name="meeting_date_2" class="form-input date-input" />
                    <select id="meeting-time-2" name="meeting_time_2" class="form-select time-select">
                      <option value="">時間を選択</option>
                      <option value="10:00">10:00</option>
                      <option value="11:00">11:00</option>
                      <option value="12:00">12:00</option>
                      <option value="13:00">13:00</option>
                      <option value="14:00">14:00</option>
                      <option value="15:00">15:00</option>
                      <option value="16:00">16:00</option>
                      <option value="17:00">17:00</option>
                      <option value="18:00">18:00</option>
                      <option value="19:00">19:00</option>
                    </select>
                  </div>
                </div>

                <div class="datetime-slot">
                  <span class="slot-label">第3希望</span>
                  <div class="slot-inputs">
                    <input type="date" id="meeting-date-3" name="meeting_date_3" class="form-input date-input" />
                    <select id="meeting-time-3" name="meeting_time_3" class="form-select time-select">
                      <option value="">時間を選択</option>
                      <option value="10:00">10:00</option>
                      <option value="11:00">11:00</option>
                      <option value="12:00">12:00</option>
                      <option value="13:00">13:00</option>
                      <option value="14:00">14:00</option>
                      <option value="15:00">15:00</option>
                      <option value="16:00">16:00</option>
                      <option value="17:00">17:00</option>
                      <option value="18:00">18:00</option>
                      <option value="19:00">19:00</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <!-- お問い合わせ内容 -->
            <div class="form-group">
              <label for="message" class="form-label">
                お問い合わせ内容 <span class="required">必須</span>
              </label>
              <textarea
                id="message"
                name="message"
                class="form-textarea"
                rows="8"
                placeholder="お問い合わせ内容をご記入ください"
                required
              ></textarea>
            </div>
          </div>

          <!-- プライバシーポリシー同意 -->
          <div class="form-group checkbox-group">
            <label class="checkbox-label">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                class="form-checkbox"
                required
              />
              <span>
                <a href="/privacy" target="_blank" class="privacy-link">プライバシーポリシー</a>に同意する
              </span>
            </label>
          </div>

          <!-- 送信ボタン -->
          <div class="form-actions">
            <button type="submit" class="btn-submit">
              送信する
            </button>
          </div>

          <!-- 送信結果メッセージ -->
          <div id="form-message" class="form-message"></div>
        </form>
      </div>

      <!-- よくある質問へのリンク -->
      <div class="faq-link-section fade-in">
        <div class="faq-card">
          <h3>よくあるご質問</h3>
          <p>お問い合わせの前に、よくあるご質問もご確認ください</p>
          <a href="/faq" class="btn-faq">FAQを見る</a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fadeInObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -80px 0px'
    });

    document.querySelectorAll('.fade-in').forEach(el => {
      fadeInObserver.observe(el);
    });
  });

  // ラジオボタンによるフォーム切り替え
  const radios = document.querySelectorAll<HTMLInputElement>('input[name="inquiry_type"]');
  const dynamicFields = document.getElementById('dynamic-fields') as HTMLElement;
  const fieldsCorporate = document.getElementById('fields-corporate') as HTMLElement;
  const fieldsIndividual = document.getElementById('fields-individual') as HTMLElement;
  const fieldPhone = document.getElementById('field-phone') as HTMLElement;
  const fieldOnlineMeeting = document.getElementById('field-online-meeting') as HTMLElement;
  const onlineMeetingCheckbox = document.getElementById('online-meeting') as HTMLInputElement;
  const meetingDatetime = document.getElementById('meeting-datetime') as HTMLElement;
  const onlineMeetingButtons = document.querySelectorAll<HTMLButtonElement>('.btn-online-meeting');

  // 日付入力の最小値を明日に設定
  const tomorrow = new Date();
  tomorrow.setDate(tomorrow.getDate() + 1);
  const minDate = tomorrow.toISOString().split('T')[0];
  document.querySelectorAll<HTMLInputElement>('.date-input').forEach(input => {
    input.min = minDate;
  });

  // すべてのオンライン面談ボタンを非表示にする関数
  function hideAllOnlineMeetingButtons() {
    onlineMeetingButtons.forEach(btn => {
      btn.style.display = 'none';
    });
  }

  radios.forEach(radio => {
    radio.addEventListener('change', () => {
      const val = radio.value;
      dynamicFields.style.display = 'block';

      // すべてのボタンを一旦非表示
      hideAllOnlineMeetingButtons();

      // フィールド表示切り替え
      if (val === 'corporate' || val === 'other') {
        fieldsCorporate.style.display = 'block';
        fieldsIndividual.style.display = 'none';
        fieldPhone.style.display = 'block';
        (document.getElementById('company') as HTMLInputElement).required = true;
        (document.getElementById('name') as HTMLInputElement).required = true;
      } else {
        fieldsCorporate.style.display = 'none';
        fieldsIndividual.style.display = 'block';
        fieldPhone.style.display = 'none';
        (document.getElementById('company') as HTMLInputElement).required = false;
        (document.getElementById('name') as HTMLInputElement).required = false;
      }

      // オンライン面談は法人・個人のみ表示（営業・その他は非表示）
      if (val === 'corporate' || val === 'individual') {
        fieldOnlineMeeting.style.display = 'block';
        // 選択されたカード内のオンライン面談ボタンを表示
        const selectedCard = radio.closest('.radio-card') as HTMLElement;
        const btn = selectedCard?.querySelector('.btn-online-meeting') as HTMLButtonElement;
        if (btn) {
          btn.style.display = 'flex';
        }
      } else {
        fieldOnlineMeeting.style.display = 'none';
        onlineMeetingCheckbox.checked = false;
        meetingDatetime.style.display = 'none';
      }

      // ラジオカードの選択スタイル
      document.querySelectorAll('.radio-card').forEach(card => card.classList.remove('selected'));
      (radio.closest('.radio-card') as HTMLElement)?.classList.add('selected');
    });
  });

  // オンライン面談ボタンのクリックイベント
  onlineMeetingButtons.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      // オンライン面談チェックボックスをオンにする
      if (onlineMeetingCheckbox) {
        onlineMeetingCheckbox.checked = true;
        // 日時選択エリアを表示
        meetingDatetime.style.display = 'block';
        // 面談日時エリアまでスクロール
        fieldOnlineMeeting.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    });
  });

  // オンライン面談チェックボックスの切り替え
  onlineMeetingCheckbox?.addEventListener('change', () => {
    meetingDatetime.style.display = onlineMeetingCheckbox.checked ? 'block' : 'none';
  });

  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formMessage = document.getElementById('form-message') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitBtn = form.querySelector('.btn-submit') as HTMLButtonElement;
    const originalText = submitBtn.textContent;

    submitBtn.disabled = true;
    submitBtn.textContent = '送信中...';
    formMessage.textContent = '';
    formMessage.className = 'form-message';

    try {
      await new Promise(resolve => setTimeout(resolve, 1500));

      formMessage.textContent = 'お問い合わせを送信しました。ご連絡ありがとうございます。';
      formMessage.className = 'form-message success';
      form.reset();

    } catch (error) {
      formMessage.textContent = '送信に失敗しました。もう一度お試しください。';
      formMessage.className = 'form-message error';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .contact-hero {
    background: linear-gradient(135deg, #40b0a0 0%, #2d8a7e 100%);
    padding: 140px 0 80px;
    text-align: center;
    color: white;
  }

  .hero-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    margin-bottom: 20px;
  }

  .hero-subtitle {
    font-size: clamp(16px, 2.5vw, 20px);
    line-height: 1.8;
    opacity: 0.95;
  }

  .contact-form-section {
    padding: 80px 0;
    background: #f8f9fa;
  }

  .form-wrapper {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 60px;
    border-radius: 20px;
    box-shadow: 0 4px 30px rgba(0,0,0,0.08);
  }

  .form-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .form-header h2 {
    font-size: 32px;
    color: #2c3e50;
    margin-bottom: 15px;
  }

  .form-header p {
    font-size: 16px;
    color: #666;
    line-height: 1.8;
  }

  .inquiry-type-group {
    margin-bottom: 40px;
  }

  .radio-cards {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 12px;
  }

  .radio-card {
    display: flex;
    align-items: center;
    padding: 18px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    background: #fafafa;
  }

  .radio-card:hover {
    border-color: #40b0a0;
    background: #f0faf8;
  }

  .radio-card.selected {
    border-color: #40b0a0;
    background: #e8f7f5;
    box-shadow: 0 0 0 3px rgba(64, 176, 160, 0.15);
  }

  .radio-card input[type="radio"] {
    width: 20px;
    height: 20px;
    margin-right: 16px;
    accent-color: #40b0a0;
    flex-shrink: 0;
  }

  .radio-card-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .radio-card-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
  }

  .radio-card-desc {
    font-size: 13px;
    color: #888;
  }

  .btn-online-meeting {
    display: none;
    align-items: center;
    gap: 8px;
    margin-left: auto;
    padding: 10px 20px;
    background: linear-gradient(135deg, #0066cc 0%, #0052a3 100%);
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 2px 10px rgba(0, 102, 204, 0.3);
  }

  .btn-online-meeting:hover {
    background: linear-gradient(135deg, #0052a3 0%, #003d7a 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 102, 204, 0.4);
  }

  .btn-online-meeting svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .radio-card {
      flex-wrap: wrap;
    }

    .btn-online-meeting {
      margin-left: 36px;
      margin-top: 10px;
      width: calc(100% - 36px);
      justify-content: center;
    }
  }

  .conditional-fields {
    animation: fadeSlideIn 0.3s ease;
  }

  @keyframes fadeSlideIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .form-group {
    margin-bottom: 30px;
  }

  .form-label {
    display: block;
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
  }

  .required {
    color: #e74c3c;
    font-size: 14px;
    margin-left: 8px;
  }

  .optional {
    color: #95a5a6;
    font-size: 14px;
    margin-left: 8px;
  }

  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: 14px 18px;
    border: 2px solid #e0e0e0;
    border-radius: 10px;
    font-size: 16px;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #40b0a0;
    box-shadow: 0 0 0 4px rgba(64, 176, 160, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 150px;
    font-family: inherit;
  }

  .meeting-checkbox {
    padding: 14px 0;
  }

  .meeting-label-text {
    font-size: 16px;
    font-weight: 600;
    color: #333;
  }

  .meeting-datetime {
    margin-top: 20px;
    padding: 24px;
    background: #f0faf8;
    border: 1px solid #c8e6e0;
    border-radius: 12px;
    animation: fadeSlideIn 0.3s ease;
  }

  .meeting-note {
    font-size: 14px;
    color: #666;
    margin-bottom: 20px;
  }

  .datetime-slot {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 14px;
  }

  .datetime-slot:last-child {
    margin-bottom: 0;
  }

  .slot-label {
    font-size: 14px;
    font-weight: 600;
    color: #40b0a0;
    min-width: 60px;
    white-space: nowrap;
  }

  .slot-inputs {
    display: flex;
    gap: 10px;
    flex: 1;
  }

  .date-input {
    flex: 1;
    min-width: 0;
  }

  .time-select {
    width: 140px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .datetime-slot {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }

    .slot-inputs {
      width: 100%;
      flex-direction: column;
    }

    .time-select {
      width: 100%;
    }
  }

  .checkbox-group {
    margin: 40px 0;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    font-size: 15px;
    color: #555;
  }

  .form-checkbox {
    width: 20px;
    height: 20px;
    margin-right: 10px;
    cursor: pointer;
    accent-color: #40b0a0;
  }

  .privacy-link {
    color: #40b0a0;
    text-decoration: underline;
  }

  .privacy-link:hover {
    color: #2d8a7e;
  }

