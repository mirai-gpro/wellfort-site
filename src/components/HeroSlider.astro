---

<section class="relative w-full h-screen overflow-hidden">
  <!-- Slider Container -->
  <div class="slider-container relative w-full h-full">
    {slides.map((slide, index) => (
      <div
        class={`slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
        data-slide={index}
      >
        <!-- Background Image -->
        <div class="absolute inset-0">
          <img 
            src={`/images/slider/slide-0${slide.id}.png`}
            alt={slide.imageAlt}
            class="w-full h-full object-cover"
            loading={slide.id === 1 ? 'eager' : 'lazy'}
          />
        </div>

        <!-- Soft Tiffany Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-tiffany-900/60 via-tiffany-700/40 to-tiffany-500/20"></div>

        <!-- Content -->
        <div class="relative h-full flex items-center z-20">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
            <div class="max-w-3xl">
              <!-- Slide Number -->
              <div class="mb-6 flex items-center space-x-3">
                <div class="w-12 h-1 bg-tiffany-400"></div>
                <span class="text-tiffany-400 font-bold text-sm tracking-wider">
                  0{slide.id} / 05
                </span>
              </div>

              <!-- Main Title - 50% smaller -->
              <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-4xl font-sans font-bold text-white mb-4 leading-tight">
                {slide.title}
              </h1>

              <!-- Subtitle - 30% smaller -->
              <p class="text-sm sm:text-base lg:text-lg text-white/90 mb-8 leading-relaxed font-normal">
                {slide.subtitle}
              </p>

              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4">
                <a
                  href={slide.cta.primary.href}
                  class="inline-flex items-center justify-center px-8 py-4 text-base font-bold rounded-full bg-gradient-tiffany text-white shadow-luxury hover:shadow-luxury-lg transition-all duration-300 hover:scale-105"
                >
                  {slide.cta.primary.text}
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
                <a
                  href={slide.cta.secondary.href}
                  class="inline-flex items-center justify-center px-8 py-4 text-base font-bold rounded-full bg-white/10 backdrop-blur-sm text-white border-2 border-white/50 hover:bg-white/20 transition-all duration-300"
                >
                  {slide.cta.secondary.text}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Navigation Dots -->
  <div class="absolute bottom-12 left-1/2 -translate-x-1/2 z-30 flex items-center space-x-3">
    {slides.map((_, index) => (
      <button
        class={`dot w-3 h-3 rounded-full transition-all duration-300 ${
          index === 0 
            ? 'bg-tiffany-400 w-12' 
            : 'bg-white/50 hover:bg-white/75'
        }`}
        data-slide-to={index}
        aria-label={`スライド ${index + 1} へ`}
      />
    ))}
  </div>

  <!-- Navigation Arrows -->
  <button
    class="prev-btn absolute left-4 lg:left-8 top-1/2 -translate-y-1/2 z-30 w-12 h-12 lg:w-16 lg:h-16 rounded-full bg-white/10 backdrop-blur-sm border-2 border-white/30 flex items-center justify-center text-white hover:bg-white/20 hover:scale-110 transition-all duration-300"
    aria-label="前のスライド"
  >
    <svg class="w-6 h-6 lg:w-8 lg:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <button
    class="next-btn absolute right-4 lg:right-8 top-1/2 -translate-y-1/2 z-30 w-12 h-12 lg:w-16 lg:h-16 rounded-full bg-white/10 backdrop-blur-sm border-2 border-white/30 flex items-center justify-center text-white hover:bg-white/20 hover:scale-110 transition-all duration-300"
    aria-label="次のスライド"
  >
    <svg class="w-6 h-6 lg:w-8 lg:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </button>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce hidden lg:block">
    <a href="#philosophy" class="flex flex-col items-center space-y-2 text-white/60 hover:text-white transition-colors">
      <span class="text-xs font-medium tracking-wider">SCROLL</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>

<script>
  // Slider functionality
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slide');
  const dots = document.querySelectorAll('.dot');
  const totalSlides = slides.length;
  let autoPlayInterval: number;

  function showSlide(index: number) {
    // Hide all slides
    slides.forEach((slide) => {
      slide.classList.remove('opacity-100', 'z-10');
      slide.classList.add('opacity-0', 'z-0');
    });

    // Show current slide
    slides[index].classList.remove('opacity-0', 'z-0');
    slides[index].classList.add('opacity-100', 'z-10');

    // Update dots
    dots.forEach((dot, i) => {
      if (i === index) {
        dot.classList.remove('bg-white/50', 'w-3');
        dot.classList.add('bg-tiffany-400', 'w-12');
      } else {
        dot.classList.remove('bg-tiffany-400', 'w-12');
        dot.classList.add('bg-white/50', 'w-3');
      }
    });

    currentSlide = index;
  }

  function nextSlide() {
    const next = (currentSlide + 1) % totalSlides;
    showSlide(next);
  }

  function prevSlide() {
    const prev = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(prev);
  }

  function startAutoPlay() {
    autoPlayInterval = window.setInterval(nextSlide, 5000); // 5秒ごとに自動切り替え
  }

  function stopAutoPlay() {
    clearInterval(autoPlayInterval);
  }

  // Event listeners
  document.querySelector('.next-btn')?.addEventListener('click', () => {
    nextSlide();
    stopAutoPlay();
    startAutoPlay();
  });

  document.querySelector('.prev-btn')?.addEventListener('click', () => {
    prevSlide();
    stopAutoPlay();
    startAutoPlay();
  });

  dots.forEach((dot) => {
    dot.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const slideIndex = parseInt(target.getAttribute('data-slide-to') || '0');
      showSlide(slideIndex);
      stopAutoPlay();
      startAutoPlay();
    });
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevSlide();
      stopAutoPlay();
      startAutoPlay();
    } else if (e.key === 'ArrowRight') {
      nextSlide();
      stopAutoPlay();
      startAutoPlay();
    }
  });

  // Start autoplay
  startAutoPlay();

  // Pause on hover
  const sliderContainer = document.querySelector('.slider-container');
  sliderContainer?.addEventListener('mouseenter', stopAutoPlay);
  sliderContainer?.addEventListener('mouseleave', startAutoPlay);
</script>

<style>
  .slide {
    transition: opacity 1s ease-in-out;
  }

  .dot {
    transition: all 0.3s ease;
  }

  /* Smooth fade animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .slide.opacity-100 h1,
  .slide.opacity-100 p,
  .slide.opacity-100 a {
    animation: fadeIn 0.8s ease-out;
  }

  .slide.opacity-100 h1 {
    animation-delay: 0.2s;
  }

  .slide.opacity-100 p {
    animation-delay: 0.4s;
  }

  .slide.opacity-100 a {
    animation-delay: 0.6s;
  }
</style>
