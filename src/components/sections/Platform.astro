<section id="platform" class="py-20 bg-gradient-to-b from-gray-50 to-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-5xl mx-auto mb-12 fade-in">
      <h2 class="heading-section mb-6">
        検知から予防まで。<br />
        健康を<span class="text-tiffany-600">「点」</span>ではなく<span class="text-tiffany-600">「線」</span>で支えるエコシステム。
      </h2>
    </div>

    <!-- Wellfort未病プラットフォーム 全体枠 -->
    <div class="platform-outer bg-gray-200 rounded-3xl p-6 lg:p-8 fade-in">
      <!-- プラットフォームタイトル -->
      <h3 class="text-2xl lg:text-3xl font-bold text-center text-gray-800 mb-8">
        Wellfort未病プラットフォーム
      </h3>

      <!-- メインコンテンツエリア -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">

        <!-- 左側: Welltect（モニタリングサービス） -->
        <div class="lg:col-span-2 bg-white rounded-2xl border-2 border-gray-400 p-6">
          <h4 class="text-xl font-bold text-gray-800 mb-6">Welltect（モニタリングサービス）</h4>

          <div class="flex flex-col lg:flex-row gap-6">
            <!-- 左カラム: データソース（シリンダー） -->
            <div class="flex flex-col gap-4 lg:w-1/4">
              <!-- 法定健康診断データ -->
              <div class="cylinder-container">
                <div class="cylinder">
                  <div class="cylinder-top"></div>
                  <div class="cylinder-body">
                    <span class="cylinder-text">法定健康診断<br/>データ</span>
                  </div>
                  <div class="cylinder-bottom"></div>
                </div>
              </div>

              <!-- 1000万人ビッグデータ -->
              <div class="cylinder-container">
                <div class="cylinder">
                  <div class="cylinder-top"></div>
                  <div class="cylinder-body">
                    <span class="cylinder-text">1000万人<br/>ビッグデータ</span>
                  </div>
                  <div class="cylinder-bottom"></div>
                </div>
              </div>
            </div>

            <!-- 右カラム: 健康管理アプリケーション -->
            <div class="flex-1 border-2 border-gray-400 rounded-xl p-4">
              <h5 class="text-center font-bold text-gray-700 mb-4">健康管理アプリケーション</h5>

              <div class="grid grid-cols-2 gap-4">
                <!-- 左側: 検査項目（楕円） -->
                <div class="flex flex-col gap-3">
                  <div class="oval-item">遺伝子検査</div>
                  <div class="oval-item">がんリスク検査</div>
                  <div class="oval-item">血液検査</div>
                </div>

                <!-- 右側: AI機能（四角） -->
                <div class="flex flex-col gap-3">
                  <div class="rect-item">AI疾病予測</div>
                  <div class="rect-item">AI予防<br/>アドバイス</div>
                </div>
              </div>
            </div>
          </div>

          <!-- 対象者説明 -->
          <p class="text-center text-gray-600 text-sm mt-4">
            法人（経営幹部、一般社員）向け、個人向けパッケージ
          </p>
        </div>

        <!-- 右側: その他予防ソリューション -->
        <div class="flex flex-col">
          <h4 class="text-xl font-bold text-gray-800 mb-4 text-center lg:text-right">その他予防ソリューション</h4>

          <div class="flex flex-col gap-4 flex-1">
            <div class="solution-box">
              <span>サプリメント販売</span>
            </div>
            <div class="solution-box">
              <span>提携クリニック</span>
            </div>
            <div class="solution-box">
              <span>パーソナルジム</span>
            </div>
          </div>
        </div>
      </div>

      <!-- ポイントモール -->
      <div class="bg-white rounded-2xl border-2 border-gray-400 p-6">
        <h4 class="text-xl lg:text-2xl font-bold text-center text-gray-800">
          Wellfortポイントモール
        </h4>
      </div>
    </div>
  </div>
</section>

<style>
  .platform-outer {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  /* シリンダー（データベース）スタイル */
  .cylinder-container {
    display: flex;
    justify-content: center;
  }

  .cylinder {
    width: 100px;
    position: relative;
  }

  .cylinder-top {
    width: 100%;
    height: 20px;
    background: #f5f5f5;
    border: 2px solid #666;
    border-radius: 50%;
    position: relative;
    z-index: 2;
  }

  .cylinder-body {
    width: 100%;
    height: 60px;
    background: #f5f5f5;
    border-left: 2px solid #666;
    border-right: 2px solid #666;
    margin-top: -10px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .cylinder-text {
    font-size: 11px;
    font-weight: 600;
    text-align: center;
    color: #333;
    line-height: 1.3;
  }

  .cylinder-bottom {
    width: 100%;
    height: 20px;
    background: #e5e5e5;
    border: 2px solid #666;
    border-radius: 50%;
    margin-top: -10px;
    position: relative;
    z-index: 0;
  }

  /* 楕円形アイテム */
  .oval-item {
    border: 2px solid #666;
    border-radius: 50px;
    padding: 12px 16px;
    text-align: center;
    font-size: 14px;
    font-weight: 500;
    color: #333;
    background: #fff;
  }

  /* 四角形アイテム */
  .rect-item {
    border: 2px solid #666;
    border-radius: 8px;
    padding: 12px 16px;
    text-align: center;
    font-size: 14px;
    font-weight: 500;
    color: #333;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 50px;
  }

  /* ソリューションボックス */
  .solution-box {
    background: #fff;
    border: 2px solid #666;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    font-size: 16px;
    font-weight: 600;
    color: #333;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* レスポンシブ調整 */
  @media (max-width: 1024px) {
    .cylinder {
      width: 80px;
    }

    .cylinder-body {
      height: 50px;
    }

    .cylinder-text {
      font-size: 10px;
    }

    .oval-item, .rect-item {
      font-size: 12px;
      padding: 10px 12px;
    }

    .solution-box {
      padding: 16px;
      font-size: 14px;
    }
  }
</style>
