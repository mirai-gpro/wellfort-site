---
const philosophyItems = [
  {
    title: 'ミッション',
    icon: 'mountain',
    points: [
      '健康モニタリングによる、がんや生活習慣病の早期発見・予防',
      '健康寿命の大幅な延伸',
      '豊かな人生の実現'
    ],
    gradient: 'from-tiffany-500 to-tiffany-600',
    color: 'tiffany'
  },
  {
    title: 'ビジョン',
    icon: 'telescope',
    points: [
      '未病のプラットフォーマーとなる',
      'ウェルテクト会員（個人・経営幹部・従業員）がさらに健康になる仕組みの構築'
    ],
    gradient: 'from-tiffany-600 to-blue-600',
    color: 'blue'
  },
  {
    title: 'バリュー',
    icon: 'diamond',
    points: [
      '最新テクノロジーの積極的な導入',
      '会員の健康増進につながる予防ソリューションの継続的な導入'
    ],
    gradient: 'from-blue-600 to-purple-600',
    color: 'purple'
  }
];
---

<section id="philosophy" class="section-bg-light">
  <div class="section-container">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 fade-in">
      <h2 class="text-4xl lg:text-5xl font-sans font-bold text-tiffany-700 mb-6">
        ウェルフォートの理念
      </h2>
    </div>

    <!-- Philosophy Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10 max-w-6xl mx-auto">
      {philosophyItems.map((item, index) => (
        <div
          class="relative bg-gradient-to-br from-white to-tiffany-50/30 rounded-3xl p-8 transition-all duration-500 group hover:shadow-luxury"
          style={`animation: slideUp 0.8s ease-out ${index * 0.15}s backwards;`}
        >
          <!-- Icon -->
          <div class="flex justify-center mb-6">
            {item.icon === 'mountain' && (
              <svg class="w-24 h-24 text-tiffany-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 21h18M4.5 18L12 8l3.5 4.5 4.5-6L22 18H4.5z"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M14 8.5L16 6l2.5 3.5"/>
              </svg>
            )}
            {item.icon === 'telescope' && (
              <svg class="w-24 h-24 text-tiffany-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <circle cx="12" cy="12" r="3" stroke-width="2"/>
                <circle cx="6" cy="6" r="1.5" fill="currentColor"/>
                <circle cx="18" cy="6" r="1.5" fill="currentColor"/>
                <circle cx="6" cy="18" r="1.5" fill="currentColor"/>
                <circle cx="18" cy="18" r="1.5" fill="currentColor"/>
                <circle cx="12" cy="3" r="1.5" fill="currentColor"/>
                <circle cx="21" cy="12" r="1.5" fill="currentColor"/>
                <circle cx="12" cy="21" r="1.5" fill="currentColor"/>
                <circle cx="3" cy="12" r="1.5" fill="currentColor"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6M9 12h6"/>
              </svg>
            )}
            {item.icon === 'diamond' && (
              <svg class="w-24 h-24 text-tiffany-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3l4 7H8l4-7zM6 10l6 11 6-11"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 10h12"/>
              </svg>
            )}
          </div>

          <!-- Title -->
          <h3 class="text-3xl font-sans font-bold text-center text-tiffany-800 mb-6">
            {item.title}
          </h3>

          <!-- Description as Bullet Points -->
          <ul class="space-y-3 text-base leading-relaxed text-neutral-700">
            {item.points.map((point) => (
              <li class="flex items-start">
                <span class="text-tiffany-600 mr-2 mt-1">•</span>
                <span>{point}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
