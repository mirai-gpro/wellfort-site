    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
    border: 2px solid white;
    z-index: 10;
    transform: translateX(-50%);
  }

  .package-overlay-btn:hover {
    transform: translateX(-50%) translateY(-3px);
