---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-white via-tiffany-50/30 to-white">
  <!-- DNA Pattern Background -->
  <div class="absolute inset-0 dna-pattern opacity-30"></div>
  
  <!-- Decorative Gradient Orbs -->
  <div class="absolute top-20 right-10 w-96 h-96 bg-tiffany-400/20 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 left-10 w-80 h-80 bg-luxury-gold/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

  <div class="section-container relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8 fade-in">
        <!-- Badge -->
        <div class="inline-flex items-center space-x-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-soft border border-tiffany-100">
          <div class="w-2 h-2 bg-tiffany-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-tiffany-700">健康経営3.0の実現へ</span>
        </div>

        <!-- Main Title (Noto Sans JP Bold) -->
        <div class="space-y-2">
          <p class="text-sm text-tiffany-700 font-medium">01 Main Title <span class="text-neutral-500">(Noto Sans JP Bold)</span></p>
          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-sans font-bold text-tiffany-800 leading-tight">
            健康寿命延伸を実現する<br />
            「未病プラットフォーム」<br />
            のご提案
          </h1>
        </div>

        <!-- Subtitle (Noto Sans JP Regular) -->
        <div class="space-y-2">
          <p class="text-sm text-tiffany-700 font-medium">02 Subtitle <span class="text-neutral-500">(Noto Sans JP Regular)</span></p>
          <p class="text-lg lg:text-xl text-neutral-700 font-normal leading-relaxed">
            健康モニタリング × 予防ソリューション<br />
            で実現する「健康経営3.0」
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a href="#service" class="btn-primary">
            <span>サービスを見る</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/contact" class="btn-secondary">
            <span>お問い合わせ</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </a>
        </div>

        <!-- Company Name (PDF Style) -->
        <div class="pt-8 border-t border-neutral-200">
          <p class="text-2xl font-sans font-normal text-neutral-900">
            株式会社ウェルフォート
          </p>
        </div>
      </div>

      <!-- Right Visual -->
      <div class="relative slide-up" style="animation-delay: 0.2s;">
        <div class="relative">
          <!-- DNA Helix Visual (Placeholder) -->
          <div class="relative w-full aspect-square max-w-lg mx-auto">
            <div class="absolute inset-0 bg-gradient-radial from-tiffany-400/20 via-tiffany-300/10 to-transparent rounded-full"></div>
            
            <!-- DNA Strand Illustration -->
            <svg class="w-full h-full" viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg">
              <defs>
                <linearGradient id="dnaGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#00cbd9;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#0de9f4;stop-opacity:1" />
                </linearGradient>
              </defs>
              
              <!-- DNA Double Helix -->
              <path d="M100,50 Q150,100 100,150 T100,250 Q150,300 100,350" 
                    stroke="url(#dnaGradient)" stroke-width="4" fill="none" opacity="0.6">
                <animate attributeName="d" 
                         values="M100,50 Q150,100 100,150 T100,250 Q150,300 100,350;
                                 M100,50 Q50,100 100,150 T100,250 Q50,300 100,350;
                                 M100,50 Q150,100 100,150 T100,250 Q150,300 100,350"
                         dur="4s" repeatCount="indefinite"/>
              </path>
              
              <path d="M300,50 Q250,100 300,150 T300,250 Q250,300 300,350" 
                    stroke="url(#dnaGradient)" stroke-width="4" fill="none" opacity="0.6">
                <animate attributeName="d" 
                         values="M300,50 Q250,100 300,150 T300,250 Q250,300 300,350;
                                 M300,50 Q350,100 300,150 T300,250 Q350,300 300,350;
                                 M300,50 Q250,100 300,150 T300,250 Q250,300 300,350"
                         dur="4s" repeatCount="indefinite"/>
              </path>
              
              <!-- Base Pairs -->
              <line x1="100" y1="80" x2="300" y2="80" stroke="#00cbd9" stroke-width="2" opacity="0.4"/>
              <line x1="100" y1="140" x2="300" y2="140" stroke="#00cbd9" stroke-width="2" opacity="0.4"/>
              <line x1="100" y1="200" x2="300" y2="200" stroke="#00cbd9" stroke-width="2" opacity="0.4"/>
              <line x1="100" y1="260" x2="300" y2="260" stroke="#00cbd9" stroke-width="2" opacity="0.4"/>
              <line x1="100" y1="320" x2="300" y2="320" stroke="#00cbd9" stroke-width="2" opacity="0.4"/>
              
              <!-- Particles -->
              <circle cx="150" cy="100" r="4" fill="#0de9f4">
                <animate attributeName="cy" values="100;150;200;250;300;100" dur="5s" repeatCount="indefinite"/>
              </circle>
              <circle cx="250" cy="300" r="4" fill="#00cbd9">
                <animate attributeName="cy" values="300;250;200;150;100;300" dur="6s" repeatCount="indefinite"/>
              </circle>
              <circle cx="200" cy="180" r="3" fill="#52fbfe">
                <animate attributeName="cy" values="180;220;260;300;180" dur="7s" repeatCount="indefinite"/>
              </circle>
            </svg>

            <!-- Floating Icons -->
            <div class="absolute top-10 right-10 w-16 h-16 bg-white rounded-2xl shadow-luxury p-3 animate-bounce" style="animation-duration: 3s;">
              <svg class="w-full h-full text-tiffany-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            
            <div class="absolute bottom-20 left-10 w-14 h-14 bg-white rounded-xl shadow-luxury p-2.5 animate-bounce" style="animation-duration: 4s; animation-delay: 1s;">
              <svg class="w-full h-full text-tiffany-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="#philosophy" class="flex flex-col items-center space-y-2 text-neutral-400 hover:text-tiffany-600 transition-colors">
      <span class="text-xs font-medium">SCROLL</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
