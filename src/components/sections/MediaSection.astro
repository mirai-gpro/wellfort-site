<section class="media-section">
  <div class="container">
    <!-- セクションタイトル（ロゴを並べて表示） -->
    <div class="media-logos-header fade-in">
      <div class="media-logos">
        <img src="/images/youtube.png" alt="YouTube" class="media-logo" />
        <img src="/images/twitter.png" alt="X (Twitter)" class="media-logo" />
        <img src="/images/instagram.png" alt="Instagram" class="media-logo" />
        <img src="/images/tiktok.png" alt="TikTok" class="media-logo" />
      </div>
    </div>

    <div class="media-corners-grid">
      <!-- 公式YouTubeチャンネル -->
      <div class="media-corner fade-in">
        <h3 class="media-corner-title">
          <svg class="media-icon youtube-icon" viewBox="0 0 24 24" fill="currentColor">
